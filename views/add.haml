#new
  %h3
    = dict[:new_issue]
  %form{:method => "post", :action => "/"}
    %p
      %label{:for => "author"}
        = dict[:author]
      = author_field
    %p
      %label{:for => "title"}
        = dict[:title]
      %input.long_field{:name => "title", :type => "text"}
    %p
      %label{:for => "body"}
        = dict[:body]
      %textarea{:name => "body", :rows => "7", :cols => "80"}
    %input{:type => "submit", :value => dict[:submit]}
    = dict[:or]
    %a.cancel{:href => "/"}
      = dict[:cancel]
